@model TrabalhoPT.Models.CardsModel

@{
    ViewBag.Title = String.Format("Criar cartão para a lista '{0}'", @Model.List.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Criar cartão para a lista '@Model.List.Name' </h2>

@using(Html.BeginForm("CreateCard", "Lists", FormMethod.Post, new { onSubmit = "return validateRegisterForm()" }))
{
    <p>
        @Html.LabelFor(c => c.Name)
        @Html.EditorFor(c => c.Name)
        @Html.ValidationMessageFor(c => c.Name)
    </p>
    <p>
        @Html.LabelFor(c => c.Description)
        @Html.EditorFor(c => c.Description)
    </p>  
    <p>
        @Html.LabelFor(c => c.InitialDate)
        @Html.EditorFor(c => c.InitialDate)
        @Html.ValidationMessageFor(c => c.InitialDate)
    </p>
    <p>
        @Html.LabelFor(c => c.DueDate)
        @Html.EditorFor(c => c.DueDate)
    </p>
    <input type="submit" value="Submeter" />
}
<p> @Html.ActionLink("Voltar", "GetCards", "Lists", new { id = @Model.List.Id}, null) </p>