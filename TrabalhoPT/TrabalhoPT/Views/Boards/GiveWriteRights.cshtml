@model TrabalhoPT.Models.RightsModel

@{
    ViewBag.Title = "Dar acesso de Escrita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Deseja dar acesso de escrita ao utilizador: </h2>

@using (@Html.BeginForm("GiveWriteRights", "Boards", FormMethod.Post, new { onSubmit = "return areAllReqFieldsFilled(this)" }))
{
    <p>
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)  
   </p>
    
    <p>
        @Html.LabelFor(m => m.BoardId)
        @Html.EditorFor(m => m.BoardId)
        @Html.ValidationMessageFor(m => m.BoardId)
    </p>
    
    <p>
        <input type="submit" value="Submeter" />
    </p>
}